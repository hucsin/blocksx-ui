{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "target": "es5",
    "allowJs": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": false,
    "declaration": true,
    "esModuleInterop": true,
    
    "strictNullChecks": true,
    "noUnusedLocals": false,
    "skipLibCheck": true,
    "pretty": true,
    "outDir": "./lib",
    "lib": ["es2017","esnext", "DOM"],
    "removeComments": true,
    "baseUrl": "./src",
    "paths": {
      "@blocksx/ui": ["components/"],
      "@blocksx/ui/*": ["components/*"]
    }
  },
  "include": [
    "src",
    "src/**/*",
    "demo"
  ],
  "exclude": [
    "node_modules",
    "examples",
    "test",
    "src/pages/EditorCore"
  ]
}